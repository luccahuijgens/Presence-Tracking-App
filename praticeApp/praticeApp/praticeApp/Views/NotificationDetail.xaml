<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="praticeApp.Views.NotificationDetail">
    <ContentPage.Content>
        <StackLayout Padding="8,12,8,12" BackgroundColor="White">
            <ContentView>
                <Label FontSize="27" TextColor="#303030" x:Name="notificationTitle"></Label>
            </ContentView>
            <Label Margin="0,4,0,0" FontSize="10" x:Name="notificationDate" />
            <Label FontSize="14" Margin="0,5,0,0" x:Name="notificationBody"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>